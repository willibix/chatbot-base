{
    "productName": "Chatbot",
    "version": "0.1.0",
    "identifier": "com.chatbot.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Chatbot",
                "width": 1200,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
        "windows": {
            "webviewInstallMode": {
                "type": "downloadBootstrapper"
            }
        },
        "macOS": {
            "minimumSystemVersion": "10.15"
        },
        "linux": {
            "appimage": {
                "bundleMediaFramework": true
            }
        }
    },
    "plugins": {
        "http": {
            "enabled": true,
            "scope": ["http://localhost:8000/**", "https://**"]
        },
        "shell": {
            "open": true
        }
    }
}
