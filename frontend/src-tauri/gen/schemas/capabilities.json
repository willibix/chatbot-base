{
    "default": {
        "identifier": "default",
        "description": "Default capability for the main window",
        "local": true,
        "windows": ["main"],
        "permissions": [
            "core:default",
            "shell:allow-open",
            "http:default",
            {
                "identifier": "http:allow-fetch",
                "allow": [{ "url": "http://localhost:*/*" }, { "url": "http://127.0.0.1:*/*" }, { "url": "https://*" }]
            }
        ]
    }
}
